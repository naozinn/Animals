<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>User</th>
      <th>Image</th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% animals.each do |animal| %>
      <tr id="animal_<%= animal.id %>">
        <td><%= link_to user_path(animal.user) do %>
          <%= attachment_image_tag(animal.user, :image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg") %>
          <% end %>
        </td>
        <td><%= attachment_image_tag(animal, :image_id, size:"40x40", format: 'jpeg', fallback: "no_image.jpg") %></td>
        <td><%= link_to animal.title, animal_path(animal), class: "animal_#{animal.id}" %></td>
        <td><%= animal.body %></td>
        <td class="favorite-btn"><%= render "favorites/favorite-btn", animal: animal %></td>
        <td>コメント数: <%= animal.animal_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>