<%= form_with model:animal,local:true do |f| %>


  <td><%= f.label :画像 %>
  <%= f.file_field :animal_image, class: "image" %>
  </td>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control animal_title' %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'form-control animal_body' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
