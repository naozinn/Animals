<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>プロフィール編集</h2>
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
              <br>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

        <div>
           <%= form_with model:@user, local:true do |f| %>
            <div class="form-group">
              <label for="inputName">名前</label>
              <%= f.text_field :name, autofocus: true, :class => "form-control aanimal_name"%>
            </div>

            <div class="form-group">
              <label for="inputImage">画像</label>
              <br><%= f.attachment_field :image, placeholder: "プロフィール画像" %>
            </div>
            <div class="form-group">
              <label for="inputIntroduction">自己紹介</label>
              <%= f.text_area :introduction, autofocus: true, :class => "form-control book_title"%>
            </div>
            <div class="form-group">
              <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
            </div>
           <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
