<main>
  <div class="container">
      <div class="pt-5">
        <h3><span style="background-color:#dcdcdc">投稿一覧</span></h3>
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>User</th>
                <th>Image</th>
                <th>Title</th>
                <th>Opinion</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @animals.each do |animal| %>
                <tr id="animal_<%= animal.id %>">
                  <td><%= animal.user.name %></td>
                  <td><%= link_to admin_user_path(animal.user.id) do %>
                    <%= attachment_image_tag(animal.user, :image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg") %>
                    <% end %>
                  </td>
                  <td><%= attachment_image_tag(animal, :animal_image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg") %></td>
                  <td><%= animal.title %></td>
                  <td><%= animal.body %></td>
                  <td><%= link_to 'Destroy', admin_animal_path(animal), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_animal_#{animal.id}"%></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%= paginate @animals %>
      </div>
    </div>
  </main>
