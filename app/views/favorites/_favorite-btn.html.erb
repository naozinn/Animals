<% if animal.favorited_by?(current_user) %>
  <%= link_to animal.favorites.count, animal_favorites_path(animal), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to animal.favorites.count, animal_favorites_path(animal), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>
